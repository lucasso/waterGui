- content_for :body do
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f|
    .text-center.mb-4
      = image_tag "kropelka_small.png", class: "mb-4"
      %h1.h3.mb-3.font-weight-normal Log In
      %p
        Please log-in to manage water server or to see your account.
      - if notice
        %p.alert.alert-success= notice
      - if alert
        %p.alert.alert-danger= alert

    .form-label-group
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-Mail Address", required: ''
      = f.label :email, "E-mail Address"

    .form-label-group
      = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true
      = f.label :password, "Password"

    - if devise_mapping.rememberable?
      .checkbox.mb-3
        %label
          = f.check_box :remember_me
          Remember me
    = f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block"

    /%p.mt-5.mb-3.text-muted.text-center 
    /  = render "devise/shared/links"

- content_for :stylesheets do
  = stylesheet_link_tag 'floating_labels', media: 'all', 'data-turbolinks-track': 'reload'
